#!/bin/bash

# Check to see if a pipe exists on stdin.
if [ -p /dev/stdin ]; then
  echo "Piping input to vscode..."
  cat - > .ced-cache
  code .ced-cache -rw
  rm -f .ced-cache
else
  # Checking to ensure a filename was specified and that it exists
  if [ -f "$1" ]; then
    echo "Piping file '$1' to vscode..."
    code $1 -rw
  else
    echo "No input given."
  fi
fi
